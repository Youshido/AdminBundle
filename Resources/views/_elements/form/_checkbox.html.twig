<div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
        <label>
            {{ form_widget(form[column]) }}
            <i class="input-helper"></i>
            {{ info.title }}
        </label>

        {% if form[column].vars.attr.help is defined %}
            <span class="help-block mt5">
                <p class="help-block">{{ form[column].vars.attr.help }}</p>
            </span>
        {% endif %}
    </div>
</div>
