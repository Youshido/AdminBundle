{{ form_label(form[column], null, { 'label_attr' : { 'class' : 'col-sm-2 control-label' } }) }}
<div class="col-sm-10">
    {{ form_widget(form[column], { 'attr': {'class': 'form-control', 'rows': '10'} }) }}

    {% if form[column].vars.attr.help is defined %}
        <span class="help-block mt5">
            <p class="help-block">{{ form[column].vars.attr.help }}</p>
        </span>
    {% endif %}
</div>
